<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_volumen"
    android:layout_margin="12dp"
    app:cardBackgroundColor="#61FFFFFF"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:contentPadding="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#836AD106"
        android:padding="16dp"
        app:cardBackgroundColor="#61353131"

        >

        <ImageView
            android:id="@+id/geek_item_volumen_portada"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/geek_item_volumen_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/geek_item_volumen_portada"
            android:text="Id"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/geek_item_volumen_numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/geek_item_volumen_id"
            android:text="vol-Numero"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/geek_item_volumen_doi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/geek_item_volumen_numero"
            android:text="doi"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/geek_item_volumen_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/geek_item_volumen_doi"
            android:text="publicado"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>




</androidx.cardview.widget.CardView>